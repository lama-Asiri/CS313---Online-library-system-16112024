<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" prefHeight="190.0" prefWidth="320.0" spacing="10" style="-fx-background-color: fff;" stylesheets="@../resources/css/style.css" xmlns="http://javafx.com/javafx/23" xmlns:fx="http://javafx.com/fxml/1" fx:controller="OnlineLibrarySystem.controllers.SystemSettingsController">
    <padding>
        <Insets bottom="20" left="20" right="20" top="20" />
    </padding>
   <GridPane vgap="8.0">
     <columnConstraints>
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
       <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
     </columnConstraints>
     <rowConstraints>
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
       <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
     </rowConstraints>
      <children>
           <Label text="Max Books to Borrow:" />
           <TextField fx:id="maxBooksField" editable="false" GridPane.columnIndex="1" />
           <Label text="Overdue Fees per Day:" GridPane.rowIndex="1" />
           <TextField fx:id="overdueFeesField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="1" />
           <Label text="Loan Duration (Days):" GridPane.rowIndex="2" />
           <TextField fx:id="loanDurationField" editable="false" GridPane.columnIndex="1" GridPane.rowIndex="2" />
      </children>
   </GridPane>
</VBox>
